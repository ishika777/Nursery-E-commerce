<% layout("layouts/boilerplate") %>
<div class="container mt-3">
    <h2>Your Shopping Cart</h2>
    <% if (cart) { %>
        <div style="margin-left: 4rem; margin-top: 2rem;">
            <% for(item of cart.product){ %>
                <div class="cart-wrapper">
                    <div class="c1">
                        <img src="<%= item.image.url %>" class="card-img-top" alt="<%= item.name %>">
                    </div>
                    <div class="c2">
                        <hr>
                        <div class="cart-head">
                            <h3><%= item.name %></h3>
                        </div>
                        <div class="cart-text">
                            <p class="cart-desc">
                                <%= item.description %>
                            </p>
                            <p class="cart-price">Price: $<%= item.price.toFixed(2) %></p>
                            <p class="cart-qty">Quantity: <%= cart.quantity[idx] %></p>
                            <% idx ++; %>
                        </div>

                        <div class="cart-btns">
            
                            <form method="POST" action="/cart/<%= item._id %>/inc">
                                <input type="hidden" name="productId" value="<%= item %>">
                                <button class="btn inc">+</button>
                            </form>
                    
                            <form method="POST" action="/cart/<%= item._id %>/dec">
                                <input type="hidden" name="productId" value="<%= item %>">
                                <button type="submit" class="btn dec">-</button>
                            </form>        
                        </div>

                        <hr>
                    </div>
                </div>
            <% } %>
        </div>
        <div style="margin-top: 3rem; margin-bottom: 2rem; margin-left: 1rem;">
            <h5>Total Amount: $<%= cart.price.toFixed(2) %></h5>
        </div>
    <% } else { %>
        <p>Your cart is empty.</p>
    <% } %>

    <a href="/home" class="btn">Continue Shopping</a>

    <% if(cart){ %>
        <a href="/cart/order" class="btn">Order Now</a>
        <a href="/cart/empty" class="btn">Empty Cart</a>
    <% } %>
</div>

