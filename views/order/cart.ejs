<% layout("layouts/boilerplate") %>
<div class="container mt-3">
    <h2>Your Shopping Cart</h2>
    <% if (cart) { %>
        <div class="row">
            <% for(item of cart.product){ %>
                <div class="col-md-4">
                    <div class="card mb-4">
                        <img src="<%= item.image.url %>" class="card-img-top" alt="<%= item.name %>">
                        <div class="card-body">
                            <h5 class="card-title"><%= item.name %></h5>
                            <p class="card-text">Price: $<%= item.price.toFixed(2) %></p>
                            <p class="card-text">Quantity: <%= cart.quantity[idx] %></p>
                            <% idx ++; %>
                        </div>



                        <div class="btns mb-4 mt-4">
            
                            <form method="POST" action="/cart/<%= item._id %>/inc">
                                <input type="hidden" name="productId" value="<%= item %>">
                                <button class="btn btn-dark offset-3 edit-btn">Inc</button>
                            </form>
                    
                            <form method="POST" action="/cart/<%= item._id %>/dec">
                                <input type="hidden" name="productId" value="<%= item %>">
                                <button type="submit" class="btn btn-dark offset-3">Dec</button>
                            </form>        
                        </div>
                    </div>
                    <br><br>
                </div>
            <% } %>
        </div>
        <div class="total-amount mt-3">
            <h4>Total Amount: $<%= cart.price.toFixed(2) %></h4>
        </div>
    <% } else { %>
        <p>Your cart is empty.</p>
    <% } %>
    <a href="/home" class="btn edit-btn">Continue Shopping</a>
    <% if(cart){ %>
        <a href="/cart/order" class="btn edit-btn">Order Now</a>
    <% } %>
</div>

