<% layout("layouts/boilerplate") %>
<div class="container mt-3">
    <h2>Your Shopping Cart</h2>
    <% if (cart) { %>
        <div class="row">
            <p>cart</p>
            <% for(item of cart){ %>
                <div class="col-md-4">
                    <div class="card mb-4">
                        <img src="<%= item[0].image.url %>" class="card-img-top" alt="<%= item[0].name %>">
                        <div class="card-body">
                            <h5 class="card-title"><%= item[0].name %></h5>
                            <p class="card-text">Price: $<%= item[0].price.toFixed(2) %></p>
                            <p class="card-text">Quantity: <%= item[1] %></p>
                        </div>
                    </div>
                </div>
            <% } %>


